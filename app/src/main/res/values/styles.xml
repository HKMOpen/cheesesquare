<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">

    </style>

    <style name="Theme.Sp" parent="Base.Theme.DesignDemo">
        <item name="android:selectableItemBackground" tools:targetApi="honeycomb">
            @drawable/selectable_item_background
        </item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#4c8181</item>
        <item name="colorPrimaryDark">#94133941</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:src">@drawable/ic_done</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>
</resources>
